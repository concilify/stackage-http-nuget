<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Product>Stackage.Http</Product>
    <Title>Stackage.Http</Title>
    <Description>Cross-cutting concerns for invoking services over HTTP</Description>
    <Authors>Andrew Craven</Authors>
    <RootNamespace>Stackage.Http</RootNamespace>
    <AssemblyName>Stackage.Http</AssemblyName>
    <Version>0.0.0</Version>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Stackage.Http</PackageId>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://dev.azure.com/acraven/stackage/_git/http</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Stackage.Core.Abstractions" Version="1.0.0-preview007"/>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="3.1.3"/>
    <PackageReference Include="Microsoft.Extensions.Http" Version="3.1.3"/>
  </ItemGroup>
</Project>
